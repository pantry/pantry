digraph pantry {
  rankdir = LR;
  color = black;
  splines = ortho;
  node [shape=rectangle];

  subgraph cluster_server {
    label = "Pantry Server";
    labeljust = left;
    edge [style=dashed];

    server     [label="Server"];
    server_web [label="Web"];
    publish    [label="PUB"];

    server_dealer [label="ROUTER"];

    server_web -> server [dir=both];

    server -> publish;
    server -> server_dealer [dir=back];
  }

  subgraph cluster_client {
    label = "Pantry Client";
    labeljust = right;
    edge [style=dashed];

    client        [label="Client"];
    subscribe     [label="SUB"];
    provisioning  [label="Chef"];
    shell         [label="Shell"];

    client_dealer [label="DEALER"];

    client     -> provisioning [dir=both];
    client     -> shell        [dir=both];

    subscribe     -> client;
    client_dealer -> client [dir=back];
  }

  server_dealer -> client_dealer [dir=back];
  publish       -> subscribe;
}
